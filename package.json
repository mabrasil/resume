{
  "name": "matts-resume",
  "version": "1.0.0",
  "description": "My resume in a few formats.",
  "main": "lib/index.js",
  "scripts": {

    "pdf:en": "pandoc -s resumes/markdown/en.md --latex-engine=xelatex -o resumes/pdf/en.pdf",
    "pdf:pt": "pandoc -s resumes/markdown/pt.md --latex-engine=xelatex -o resumes/pdf/pt.pdf",
    "pdf": "npm run pdf:en && npm run pdf:pt",

    "word:en": "pandoc -s resumes/markdown/en.md -o resumes/word/en.docx",
    "word:pt": "pandoc -s resumes/markdown/pt.md -o resumes/word/pt.docx",
    "word": "npm run word:en && npm run word:pt",

    "latex:en": "pandoc -s resumes/markdown/en.md -o resumes/latex/en.tex",
    "latex:pt": "pandoc -s resumes/markdown/pt.md -o resumes/latex/pt.tex",
    "latex": "npm run latex:en && npm run latex:pt",

    "clean": "node lib/clean.js",
    "generate": "npm run clean && npm run pdf && npm run word && npm run latex && node lib/log.js"

  },
  "dependencies": {
  },
  "devDependencies": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mabrasil/resume.git"
  },
  "keywords": [
    "Resume",
    "Curriculum",
    "Markdown",
    "PDF",
    "Word",
    "LaTex"
  ],
  "author": "Matheus Brasil",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mabrasil/resume/issues"
  },
  "homepage": "https://github.com/mabrasil/resume#readme"
}
